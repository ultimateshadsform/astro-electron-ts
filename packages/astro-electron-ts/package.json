{
  "name": "astro-electron-ts",
  "description": "Build cross-platform desktop apps with Electron and Astro",
  "repository": "github:ultimateshadsform/astro-electron-ts",
  "homepage": "https://github.com/ultimateshadsform/astro-electron-ts",
  "license": "MIT",
  "author": "SHADXW",
  "type": "module",
  "version": "1.0.20",
  "keywords": [
    "withastro",
    "astro-integration",
    "astro",
    "electron"
  ],
  "scripts": {
    "build": "bun run clean && tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "bun rimraf dist"
  },
  "files": [
    "dist",
    "templates"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "vite-plugin-electron": "^0.28.0"
  },
  "peerDependencies": {
    "astro": "^4.0.0",
    "electron": "33.2.0"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "vitest": "2.1.5",
    "@vitest/coverage-v8": "2.1.5",
    "@types/node": "22.9.0",
    "rimraf": "6.0.1"
  }
}
