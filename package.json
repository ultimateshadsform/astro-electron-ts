{
  "name": "astro-electron-ts",
  "description": "Build cross-platform desktop apps with Electron and Astro",
  "repository": "github:ultimateshadsform/astro-electron-ts",
  "homepage": "https://github.com/ultimateshadsform/astro-electron-ts",
  "license": "MIT",
  "author": "SHADXW",
  "type": "module",
  "version": "1.0.20",
  "keywords": [
    "withastro",
    "astro-integration",
    "astro",
    "electron"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "check": "tsx scripts/check.ts",
    "test": "vitest"
  },
  "files": [
    "dist",
    "templates"
  ],
  "bin": {
    "astro-electron-ts": "./dist/bin/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@inquirer/prompts": "^7.1.0",
    "commander": "^12.1.0",
    "detect-package-manager": "^3.0.2",
    "execa": "^9.5.1",
    "vite-plugin-electron": "^0.28.0"
  },
  "peerDependencies": {
    "astro": "^4.0.0",
    "electron": "33.2.0"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "vitest": "^2.1.4"
  }
}
